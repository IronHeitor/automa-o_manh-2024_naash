import java.util.Scanner;
public class Main
{
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        System.out.println("Digite um número PAR para média simples e um número IMPAR para média ponderada: ");
        int p = scan.nextInt();
        System.out.println("digite n1: ");
        int n1 = scan.nextInt();
        System.out.println("digite n2: ");
        int n2 = scan.nextInt();
        System.out.println("digite n3: ");
        int n3 = scan.nextInt();
        
    if(p%2 == 0){
        float media_simples = (n1+n2+n3)/3f;
        System.out.println("A média simples é "+ media_simples +" .");
    }else{
        float media_ponderada = (n1*2+n2*3+n3*4)/9f;
        System.out.println("A média ponderada é "+ media_ponderada +" .");
    }
        
    }
}
