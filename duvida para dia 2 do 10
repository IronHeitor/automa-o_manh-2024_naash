        int idadep = (idade-18);
        System.out.println("Você já se alistou? ");
        boolean alist= scan.nextBoolean();
        if (alist==true){
            }else{
                if (idade>18){
                    System.out.println("você está com o alistamento militar atrasado há "+ idadep +" anos");
                    if (idade<18){
                        System.out.println("Faltam " + idadef + " anos para você se alistar");
